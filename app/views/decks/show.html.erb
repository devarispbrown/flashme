
<h1><%= @deck.name %><span id="new_link"><%= link_to " New Card", new_deck_card_path(@deck) %></span></h1>
 
<% @cards.each do |card| %>
  <div class="card">
    <%= link_to card.front, [@deck, card], :class => "card_text" %>
  </div>
    <%= link_to "Edit", edit_deck_card_path(@deck, card) %>
    <%= link_to "Delete", [@deck, card], method: :delete, confirm: "Are you sure?" %>
  
<% end %> 
  

