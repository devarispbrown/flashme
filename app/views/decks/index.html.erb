<h1>Decks<span id="new_link"><%= link_to " New Deck", new_deck_path %></span></h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Deck Name</th>
    </tr>
  </thead>
  <tbody>
    
      <% @decks.each do |deck| %>
        <tr>
          <td><%= link_to deck.name, deck %></td>
          <td><%= link_to "Edit", edit_deck_path(deck) %></td>
          <td><%= link_to "Delete", deck, method: :delete, confirm: "Are you sure?" %></td> 
        </tr>
      <% end %>
   
  </tbody>
</table>